<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>AlunoIncluir</servlet-name>
        <servlet-class>controle.AlunoIncluir</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>controle.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlunoAlterar</servlet-name>
        <servlet-class>controle.AlunoAlterar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlunoExcluir</servlet-name>
        <servlet-class>controle.AlunoExcluir</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AlunoAlterar</servlet-name>
        <url-pattern>/AlunoAlterar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlunoExcluir</servlet-name>
        <url-pattern>/AlunoExcluir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlunoIncluir</servlet-name>
        <url-pattern>/AlunoIncluir</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>